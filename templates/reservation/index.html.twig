{% extends 'base.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
    <h1>Reservation index</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Ordinateur</th>
                <th scope="col">Etudiant</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr class="table-secondary">
                <td>{{ reservation.id }}</td>
                <td>{{ reservation.ordinateur }}</td>
                <td>{{ reservation.etudiant }}</td>
                <td>
                    <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}" class="btn btn-warning">show</a>
                    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="btn btn-danger">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reservation_new') }}" class="btn btn-primary">Create new</a>
{% endblock %}
